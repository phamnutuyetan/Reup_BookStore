
@{
    ViewBag.Title = "AddOrEditOrder";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-12">
                <!-- Breadcrumb-->
                <nav aria-label="breadcrumb" role="navigation" style="margin-top: 20px">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="#">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="#">Quản lý sản phẩm</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
                    </ol>
                </nav>
                <!-- End Breadcrumb-->
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color:rgb(1, 85, 180); color:aliceblue">
                <i class="fa fa-tasks fa-fw"></i> Thêm Order
                <div class="pull-right">
                    <button type="button" class="btn btn-default btn-xs">
                        Xóa trắng
                    </button>
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Order ID</label>
                            <input class="form-control" placeholder="Order ID">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>User ID</label>
                            <input class="form-control" placeholder="User ID">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>User ID</label>
                            <input class="form-control" placeholder="User ID">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Status</label>
                            <select class="form-control">
                                <option>Available</option>
                                <option>Unavailable</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Create At</label>
                            <input class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Delivery Date</label>
                            <input class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label>Address</label>
                            <input class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Anomymous ID</label>
                            <input class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Anonymous User ID</label>
                            <input class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Total Amount</label>
                            <input class="form-control">
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-group">
                            <label>Code</label>
                            <input class="form-control">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" rows="2" style="resize:none;overflow:hidden"></textarea>
                        </div>
                    </div>
                </div>
                <button class="btn btn-primary">Lưu thông tin</button>

            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>

