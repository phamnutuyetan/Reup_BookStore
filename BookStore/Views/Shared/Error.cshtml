<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lỗi</title>
</head>
@{
    string errorCode = ViewBag.ErrorCode?? "Lỗi không xác định.";
    string errorDetail = ViewBag.ErrorDetail ?? "Hệ thống đã gặp lỗi không xác định. Vui lòng thử lại sau.";
}
<body>
    <hgroup>
        <h1>@errorCode</h1>
        <h2>@errorDetail</h2>
    </hgroup>
</body>
</html>
